<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iqbalzauqul.attendees.Activities.MainActivities.updateKelas">


    <ImageButton
        android:id="@+id/kegiatan_imgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:adjustViewBounds="true"
        android:background="#00ffffff"
        android:backgroundTint="#00ffffff"
        android:cropToPadding="false"
        android:scaleType="centerCrop"

        android:tint="#00ffffff"
        app:srcCompat="@mipmap/add_btn" />

    <EditText
        android:id="@+id/namaKegiatan_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Nama Kegiatan"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/descKegiatan_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/namaKegiatan_Edt"
        android:layout_below="@+id/namaKegiatan_Edt"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Deskripsi"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/jumlahPertemuan_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/descKegiatan_Edt"
        android:layout_below="@+id/descKegiatan_Edt"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Jumlah Pertemuan"
        android:inputType="number" />

    <Button
        android:id="@+id/updateBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"

        android:text="UPDATE"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>
