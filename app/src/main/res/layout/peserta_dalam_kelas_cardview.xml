<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginVertical="15dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_Peserta"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"

                android:src="@mipmap/ic_acc"
                android:tint="@color/colorPrimary"

                />

            <TextView
                android:id="@+id/lbl_namaPeserta"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="10dp"

                android:layout_toEndOf="@+id/img_Peserta"
                android:includeFontPadding="true"
                android:paddingLeft="10dp"
                android:text="Iqbal Zauqul Adib" />

            <TextView
                android:id="@+id/lbl_nimPeserta"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_namaPeserta"
                android:layout_toEndOf="@+id/img_Peserta"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:text="11160910000097"
                android:textSize="16dp" />
            "/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imageButtonPresentase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lbl_nimPeserta"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                app:srcCompat="@drawable/cast_ic_expanded_controller_stop" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>