<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp">

    <de.hdodenhof.circleimageview.CircleImageView


        android:id="@+id/avatar_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/tom"

        />

    <LinearLayout
        android:id="@+id/textview_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/avatar_imageview"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="80dp">

            <TextView
                android:id="@+id/nama_peserta_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iqbal Zauqul Adib"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11160910000097"
                android:textSize="10sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="16dp"

    >
    <com.hookedonplay.decoviewlib.DecoView
        android:layout_width="45dp"
        app:dv_lineWidth="5dp"
        android:layout_height="45dp"
        android:id="@+id/persenArc"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:textSize="8sp"
        android:text="0%"
        android:id="@+id/presentaseText"/>
</RelativeLayout>

</RelativeLayout>

